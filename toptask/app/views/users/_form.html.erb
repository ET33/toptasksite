<% if @user.errors.any? %> 
	<div id="error_explanation">
			<h2> Corriga os erros abaixo antes de prosseguir</h2><br/>
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
					<li> <%= msg %></li>
				<% end %>
			</ul>
	</div>
<% end %>

<%= form_for @user do |f| %>
	<p>
		<%= f.label :nome %> <br/>
		<%= f.text_field :nome %>
	</p>
	<p>
		<%= f.label :email %><br/>
		<%= f.email_field :email %>
	</p>
	<p>
		<%= f.label :senha %><br/>
		<%= f.password_field :senha %>
	</p>
	<p>
		Confirmacao de Senha <br/>
		<%= f.password_field :senha_confirmation %>
	</p>
	<p>
		<%= f.radio_button(:permissao, 0) %>
		<%= f.label(:permissao, "Administrador") %>
		<%= f.radio_button(:permissao, 1) %>
		<%= f.label(:permissao, "Desenvolvedor") %>
		<%= f.radio_button(:permissao, 2) %>
		<%= f.label(:permissao, "Cliente") %>
	</p>
	<p>
		<%= f.submit "Salvar"%>
	</p>
	
<% end %>